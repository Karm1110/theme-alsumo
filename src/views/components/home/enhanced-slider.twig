<div class="enhanced-slider relative">
    {# Alsumo Theme: Video background feature #}
    {% if component.video_url %}
        <div class="enhanced-slider-video absolute inset-0 w-full h-full" data-video-url="{{ component.video_url }}">
            {# The home.js file will inject the YouTube iframe here #}
        </div>
    {% endif %}

    <salla-slider
            class="!static"
            type="carousel"
            id="enhanced-slider-{{ component.id }}"
            block-title="{{ component.title }}"
            show-controls="true">
        <div class="swiper-wrapper">
            {% for slide in component.slides %}
                <div class="swiper-slide">
                    <div class="h-full bg-cover bg-center" style="background-image: url('{{ slide.image }}');">
                        <div class="container h-full flex flex-col items-center justify-center text-center">
                            <h2 class="text-3xl md:text-5xl font-bold anime-in-start">{{ slide.title }}</h2>
                            <p class="text-lg md:text-xl mt-4 anime-in-start">{{ slide.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</div>
