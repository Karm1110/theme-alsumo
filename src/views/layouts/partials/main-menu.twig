<ul class="flex">
    {% for category in store.categories %}
        <li class="menu-item">
            <a href="{{ category.url }}">{{ category.name }}</a>
            
            {% if category.children|length %}
                <div class="mega-menu">
                    <div class="mega-menu-content">
                        {% for child_category in category.children %}
                            <div class="mega-menu-col">
                                <h3 class="menu-title">{{ child_category.name }}</h3>
                                {% for sub_child_category in child_category.children %}
                                    <a href="{{ sub_child_category.url }}">{{ sub_child_category.name }}</a>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </li>
    {% endfor %}
</ul>
